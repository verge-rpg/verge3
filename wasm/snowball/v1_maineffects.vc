{
	timer = 0;
	int _img = DuplicateImage(screen);
	while (timer<_dur)
	{
		Blit(0, 0, _img, screen);
		SetLucent(100 - (timer*100/_dur));
		RectFill(0, 0, ImageWidth(screen), ImageHeight(screen), 0, screen);
		SetLucent(0);	
		ShowPage();
	}
	FreeImage(_img);
}

