		Render();
		RectFill(0,0,320,240,0,crossfade_img);
		CircleFill(160, 120, timer*200/dur, timer*200/dur, transcolor, crossfade_img);
		TBlit(0, 0, crossfade_img, screen);
		ShowPage();
	}
}

